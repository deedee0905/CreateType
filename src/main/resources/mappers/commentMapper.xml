<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amita.createType.ex.post.comment.dao.CommentDAO">
	<insert id="insertComment" parameterType="map">
		INSERT INTO
			`comment`
		(
			`userId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{postId}
			,#{comment}
			,now()
			,now()	
		)
	
	</insert>
	
	<select id="selectCommentList" parameterType="int" resultType="com.amita.createType.ex.post.comment.model.Comment">
		SELECT
			`id`
			,`userId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
			
	
	</select>
	
	<delete id="deleteComment" parameterType="map">
		DELETE FROM
			`comment`
		WHERE
			`userId` = #{userId}
			AND `id`= #{id}
			
	</delete>
	
	<select id="selectCommentCount" parameterType="int" resultType="int">
		SELECT
			count(1)
		FROM
			`comment`
		WHERE
			`postId` = #{postId}	
	</select>
	
	<delete id="deleteCommentByPostId" parameterType="int">
		DELETE FROM
			`comment`
		WHERE
			`postId` = #{postId}
	</delete>
	

</mapper>

