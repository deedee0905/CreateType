<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amita.createType.ex.post.comment.dao.CommentDAO">
	<insert id="insertComment" parameterType="map">
		INSERT INTO
			`comment`
		(
			`userId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{postId}
			,#{comment}
			,now()
			,now()	
		)
	
	</insert>
	
	<select id="selectPostList" parameterType="int" resultType="com.amita.createType.ex.post.comment.model.Comment">
		SELECT
			`id`
			,`userId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
			
	
	</select>

</mapper>

