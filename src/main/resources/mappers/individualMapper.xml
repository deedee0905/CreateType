<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amita.createType.ex.individual.dao.IndividualDAO">

	<insert id="insertChannel" parameterType="map">
		INSERT INTO
			`channel`
		(
			`userId`
			,`channelName`
			,`channelInfo`
			,`channelImagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{channelName}
			,#{channelInfo}
			,#{channelImagePath}
			, now()
			, now()
			
		)
	
	</insert>
	
	<select id="selectChannelById" parameterType="int" resultType="com.amita.createType.ex.individual.model.Channel">
		SELECT
			`id`
			,`userId`
			,`channelName`
			,`channelInfo`
			,`channelImagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`channel`
		WHERE
			`userId` = #{userId}
	
	</select>


</mapper>

