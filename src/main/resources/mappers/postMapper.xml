<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.amita.createType.ex.post.dao.PostDAO">
  	<insert id="insertNewPost" parameterType="map">
  		INSERT INTO
  			`post`
  		(
			`userId`
			,`channelId`
			,`title`
			,`subtitle`
			,`content`
			,`category`
			,`price`
			,`createdAt`
			,`updatedAt`	  
  		)
  		VALUES
  		(
  			#{userId}
  			,#{channelId}
  			,#{title}
  			,#{subtitle}
  			,#{content}
  			,#{category}
  			,#{price}
  			,now()
  			,now()
  		)
  			
  	
  	
  	</insert>
  	
  	<select id="selectPost" parameterType="int" resultType="com.amita.createType.ex.post.model.Post">
  		SELECT
  			`id`
  			,`userId`
  			,`channelId`
  			,`title`
  			,`subtitle`
  			,`content`
  			,`category`
  			,`price`
  			,`createdAt`
  			,`updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id}
  	
  	</select>
  	
  	<select id="selectCategory" parameterType="int" resultType="com.amita.createType.ex.post.model.Post">
  		SELECT
  			`id`
  			,`userId`
  			,`channelId`
  			,`title`
  			,`subtitle`
  			,`content`
  			,`category`
  			,`price`
  			,`createdAt`
  			,`updatedAt`
  		FROM
  			`post`
  		WHERE
  			`category` = #{category}
  		ORDER BY `id` DESC
  	
  	</select>
  	
  	<select id="updatePostSelect" parameterType="map" resultType="com.amita.createType.ex.post.model.Post">
  		SELECT
  			`id`
  			,`userId`
  			,`channelId`
  			,`title`
  			,`subtitle`
  			,`content`
  			,`category`
  			,`price`
  			,`createdAt`
  			,`updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id}
  	</select>
  	
  	<update id="updatePost" parameterType="map">
  		UPDATE
  			`post`
  		SET
  			`title` = #{title}
  			, `subtitle` = #{subtitle}
  			, `content` = #{content}
  			, `category` = #{category}
  			, `price` = #{price}
  			, `updatedAt` = now()
  		WHERE
  			`id` = #{id}
  	
  	</update>
  	
  	<delete id="deletePost" parameterType="int">
  		DELETE FROM
  			`post`
  		WHERE
  			`channelId` = #{channelId}
  			AND `id` = #{id}
  	
  	</delete>
  	
  	<select id="selectPostListByPostId" parameterType="int" resultType="com.amita.createType.ex.post.model.Post">
  		SELECT
  			`id`
  			,`userId`
  			,`channelId`
  			,`title`
  			,`subtitle`
  			,`content`
  			,`category`
  			,`price`
  			,`createdAt`
  			,`updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id}
  	
  	</select>
  	
  	
  
  </mapper>
  