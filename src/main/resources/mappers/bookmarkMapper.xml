<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amita.createType.ex.commision.bookmark.dao.BookmarkDAO">
	<insert id="insertBookmark" parameterType="map">
		INSERT INTO
			`bookmark`
		(
			`userId`
			,`commisionPostId`
			,`channelId`
			,`createdAt`
		)
		VALUES
		(
			#{userId}
			,#{postId}
			,#{channelId}
			,now()
		)
		
	
	</insert>
	
	<delete id="deleteBookmark" parameterType="map">
		DELETE FROM
			`bookmark`
		WHERE
			`userId` = #{userId}
			AND `commisionPostId` = #{postId}
			AND `channelId` = #{channelId}
			
	
	</delete>
	
	<select id="bookmarkDiscrimination" parameterType="int" resultType="int">
		SELECT
			count(1)
		FROM
			`bookmark`
		WHERE
			`userId` = #{userId}
			AND `commisionPostId` = #{postId}
		
		
	</select>
	
	<select id="selectBookmarkList" parameterType="int" resultType="com.amita.createType.ex.commision.bookmark.model.Bookmark">
		SELECT
			`id`
			,`userId`
			,`commisionPostId`
			,`channelId`
			,`createdAt`
		FROM
			`bookmark`
		WHERE
			`userId` = #{userId}
	</select>

</mapper>
